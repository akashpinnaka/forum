<%= link_to("Home", {:controller => "posts", :action => "index"}) %>
<%= form_for(:post, :url => {:action => "create"}) do |f| %>

	<%= f.label(:title) %>
	<br />
	<%= f.text_field(:title) %>
	<br />
	<%= f.label(:content) %>
	<br />
	<%= f.text_area(:content) %>
	<br />
	<%= f.submit 'Submit', data: { disable_with: "Creating your post..." } %>
<% end %>
