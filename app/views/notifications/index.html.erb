<div id="new_message_button">
	<%= link_to("Sent messages", {:controller => "notifications", :action => "sent_messages"}) %>
	<%= link_to("New message", {:controller => "notifications", :action => "new"}) %>
</div>

<div id = "messages_wrapper">

<% @notifications.each do |notification| %>

    
	<div class="<%= notification.status ? 'message_wrapper_read' : 'message_wrapper_unread' %>">
		<p><%= notification.message %></p>
		<% if notification.user_id %>
			<p class = "message_details">from <span><%= notification.user.registered_id %></span></p>
		<% end %>		
	</div>

<% end %>

</div>