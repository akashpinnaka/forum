<div id = "users_show_wrapper">
	<div id = "profile_picture">
		<%= image_tag @user.profile_picture %>
	</div> <!-- profile_picture -->
	<div id = "user_details">
		<table class = "details">
			<tr>
				<th>Registered ID :</th>
				<td><%= @user.registered_id %></td>
			</tr>
			<tr>
				<th>Name:</th>
				<td><%= "#{@user.first_name} #{@user.last_name}" %></td>
			</tr>
			<tr>
				<th>Course:</th>
				<td><%= @user.branch %></td>
			</tr>
			<tr>
				<th>Email:</th>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<th>Role:</th>
				<td><%= @user.role %></td>
			</tr>
		</table>



		<div id = "password_reset_form">

		<%= form_for(:user, :url => {:action => "update", :id => @user.id}) do |f| %>
		<table class = "password_reset_form">
		<tr>
		<th id = "password_reset_form_head">Reset your Password</th>
		</tr>
		 <tr>
			<th><%= f.label(:password, "New Password:") %></th>
			<td><%= f.password_field(:password) %></td>
		</tr>
		<tr>
			<th><%= f.label(:password_confirmation, "Confirm Password:") %></th>
			<td><%= f.password_field(:password_confirmation) %></td>
		</tr>
		<tr>
			<th></th>
			<td><%= f.submit "Change Password", :data => {:disable_with => "Changing password"} %></td>
		</tr>
		</table>
		<% end %>
	</div> <!-- password_reset_form -->

	</div> <!-- user_details -->

	
</div> <!-- users_show_wrapper -->