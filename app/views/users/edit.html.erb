<div id = "users_edit_wrapper">
<%= form_for(:user, :url => {:action => "update", :id => @user.id},html: { multipart: true }) do |f| %>
<table>
	<tr>
		<td><%= f.label(:registered_id, "Registered ID") %></td>
		<td><%= f.text_field(:registered_id) %></td>
	</tr>
	<tr>
		<td><%= f.label(:first_name, "First name:") %></td>
		<td><%= f.text_field(:first_name) %></td>
	</tr>
	<tr>
		<td><%= f.label(:last_name, "Last name:") %></td>
		<td><%= f.text_field(:last_name) %></td>
	</tr>
	<tr>
		<td><%= f.label(:email, "Email:") %></td>
		<td><%= f.email_field(:email) %></td>
	</tr>
	<tr>
		<td><%= f.label(:role, "Role:") %></td>
		<td><%= f.select(:role, options_for_select([ "student", "admin" ], "student")) %></td>
	</tr>
	<tr>
		<td><%= f.label(:branch, "Branch:") %></td>
		<td><%= f.select(:branch, options_for_select([ "CSE", "ECE", "EEE", "IT", "MECH", "CIVIL" ], "ECE")) %></td>
	</tr>
	<tr>
		<td><%= f.label(:profile_picture, "Profile picture:") %></td>
		<td><%= f.file_field(:profile_picture) %></td>
	</tr>
	<tr>
		<td><%= f.label(:password, "Password:") %></td>
		<td><%= f.password_field(:password) %></td>
	</tr>
	<tr>
		<td><%= f.label(:password_confirmation, "Confirm Password") %></td>
		<td><%= f.password_field(:password_confirmation) %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= f.submit "Update User", :data => {:disable_with => "Updating user..."} %></td>
	</tr>

</table>
<% end %>
</div>